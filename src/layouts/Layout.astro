---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <script is:inline>
      /* eslint-disable */
      (function () {
        if (document.readyState === "complete") {
          setTimeout(function () {
            document.documentElement.setAttribute("data-hydrated", "true");
          }, 100);
        } else {
          window.addEventListener("load", function () {
            setTimeout(function () {
              document.documentElement.setAttribute("data-hydrated", "true");
            }, 100);
          });
        }
      })();
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    position: relative;
    background-color: #0f0f0f;
  }

  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/Icon_P.png");
    background-size: 350px;
    background-position: 0 0;
    background-repeat: repeat;
    opacity: 0.12;
    filter: blur(1px);
    pointer-events: none;
    z-index: 0;
  }

  body > :global(*) {
    position: relative;
    z-index: 1;
  }
</style>
