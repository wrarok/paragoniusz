---
/* eslint-disable prettier/prettier */
import Layout from "../../../layouts/Layout.astro";
import { ExpenseForm } from "../../../components/ExpenseForm/ExpenseForm";
import { createSupabaseServerInstance } from "../../../db/supabase.server";
import { convertAmountToString } from "../../../lib/validation/expense-form.validation";

/**
 * Edit Expense Page
 *
 * Server-side route that renders the expense form in "edit" mode.
 * Fetches both categories and the specific expense data from the API.
 *
 * Route: /expenses/{id}/edit
 * Access: Available from expense list via edit action
 */

const { id } = Astro.params;

// Validate expense ID
if (!id) {
  return Astro.redirect("/");
}

// Check authentication using SSR client
const supabase = createSupabaseServerInstance({
  headers: Astro.request.headers,
  cookies: Astro.cookies,
});

const {
  data: { session },
} = await supabase.auth.getSession();

if (!session) {
  return Astro.redirect("/login");
}

// Fetch categories and expense data directly using Supabase client
let categories = [];
let expense = null;
let error = null;

try {
  // Fetch categories
  const { data: categoriesData, error: categoriesError } = await supabase
    .from("categories")
    .select("id, name")
    .order("name");

  if (categoriesError) {
    throw new Error("Failed to fetch categories");
  }
  categories = categoriesData || [];

  // Fetch expense (RLS will ensure user can only access their own expenses)
  const { data: expenseData, error: expenseError } = await supabase
    .from("expenses")
    .select(`
      id,
      user_id,
      category_id,
      amount,
      expense_date,
      currency,
      created_by_ai,
      was_ai_suggestion_edited,
      created_at,
      updated_at,
      category:categories(id, name)
    `)
    .eq("id", id)
    .single();

  if (expenseError) {
    if (expenseError.code === "PGRST116") {
      // No rows returned - expense not found or user doesn't have access
      return Astro.redirect("/?error=expense-not-found");
    }
    throw expenseError;
  }

  // Convert expense data for form (amount must be string)
  expense = {
    ...expenseData,
    amount: convertAmountToString(expenseData.amount as number),
  };
} catch (err) {
  console.error("Error fetching data:", err);
  error = "Failed to load expense data. Please try again.";
}

// If no expense data and no error, something went wrong
if (!expense && !error) {
  error = "Expense not found";
}
---

<Layout title="Edit Expense - Paragoniusz">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center gap-4">
          <a
            href="/"
            class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
            aria-label="Back to dashboard"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"
              ></path>
            </svg>
          </a>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
            Edit Expense
          </h1>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      {error ? (
        <div>
          <!-- Error State -->
          <div
            class="rounded-md bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-4"
            role="alert"
          >
            <div class="flex">
              <div class="flex-shrink-0">
                <svg
                  class="h-5 w-5 text-red-400 dark:text-red-500"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                  {error}
                </h3>
                <div class="mt-2 flex gap-4">
                  <button
                    onclick="window.location.reload()"
                    class="text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-500 dark:hover:text-red-300"
                  >
                    Retry
                  </button>
                  <a
                    href="/"
                    class="text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-500 dark:hover:text-red-300"
                  >
                    Back to Dashboard
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      ) : expense ? (
        <div>
          <!-- Form Card -->
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
            <ExpenseForm mode="edit" expenseId={id} initialData={expense} categories={categories} client:load />
          </div>
        </div>
      ) : null}
    </main>
  </div>
</Layout>