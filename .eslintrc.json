{
  "ignorePatterns": ["*.astro", "src/db/database.types.ts"],
  "overrides": [
    {
      "files": ["e2e/**/*.ts", "test/**/*.ts", "test/**/*.tsx", "supabase/functions/**/*.ts"],
      "rules": {
        "no-console": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": ["src/lib/services/*.ts", "src/lib/transformers/*.ts", "src/lib/builders/*.ts"],
      "rules": {
        "@typescript-eslint/no-extraneous-class": "off"
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "react-compiler/react-compiler": "off"
      }
    }
  ]
}